{
  "hosting": {
    "public": "dist",
    "cleanUrls": true,
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
         {
            "source": "**/bundle.js",
            "destination": "/bundle.js"
        },
        {
            "source": "**/portfolio/**",
            "destination": "/portfolio.html"
        },
        {
            "source": "**/",
            "destination": "/index.html"
        }
   ]
  }
}
